    1 # Project settings that override env/defaults across agents.
    2 # You can rename or point CONFIG_FILE to a different path.
    3 
    4 project:
    5   # Only prompt override: the goal (domain-agnostic)
    6   goal: "i want to do skin cancer classification and detection using deep learning model"
    7   # Optional explicit title (used in paper/report); leave empty to auto-generate
    8   title: ""
    9 
   10 dataset:
   11   # Generalized dataset configuration (YAML-first). If absent, env may be used as fallback.
   12   # kind: imagefolder | cifar10 | custom (optional; inferred when omitted)
   13   kind: imagefolder
   14   # Free-form label; does not gate behavior
   15   name: default
   16   # Base path; for imagefolder expects split subfolders
   17   path: data/dataset
   18   # Optional split folder names
   19   splits:
   20     train: train
   21     val: val
   22     test: test
   23   # Allow safe fallbacks (e.g., torchvision FakeData) if real dataset not present.
   24   allow_fallback: false
   25   # Allow dataset download where supported (e.g., CIFAR10)
   26   allow_download: false
   27   # For CIFAR10 only: fraction of train data used as validation
   28   val_fraction: 0.1
   29   # Optional custom dataset classes when kind=custom
   30   # custom:
   31   #   train: { module: mypkg.datasets, class: MyTrain, kwargs: { root: /data, split: train } }
   32   #   val:   { module: mypkg.datasets, class: MyVal,   kwargs: { root: /data, split: val } }
   33   #   test:  { module: mypkg.datasets, class: MyTest,  kwargs: { root: /data, split: test } }
   34 
   35 research:
   36   num_problems: 2
   37   num_objectives: 2
   38   num_contributions: 2
   39   num_questions: 1
   40 
   41 # Global LLM profiles and default selection
   42 llm:
   43   # Aliases map to providers via utils.llm_utils
   44   default: gpt-5-mini   # OpenAI GPT‑5 mini
   45   custom: deepseek      # DeepSeek chat
   46   use: default          # fallback profile when per-agent is omitted
   47   # Optional streaming toggle for chat_text (unsupported for JSON outputs)
   48   stream: false
   49 
   50 # Pipeline controls (YAML-first). All are optional.
   51 pipeline:
   52   # Skip stages automatically without CLI or env flags
   53   skip:
   54     find_papers: true
   55     summaries: false
   56     novelty: false
   57     idea_blueprints: false
   58     planner: false
   59     iterate: false
   60     lit_review: true
   61     interactive: true
   62   # Number of iterate cycles (fallback to 2 if unset)
   63   max_iters: 2
   64   # Write paper draft at the end
   65   write_paper: false
   66   # Re-run stages even if artifacts already exist
   67   always_fresh: true
   68   # Summarize agent configuration
   69   summarize:
   70     llm: default          # profile alias
   71     max_pages: 0          # 0 = no page limit
   72     max_chars: 0          # 0 = no character limit
   73     pass1_chunk: 20000    # chars per chunk when chunking
   74     progress: true        # print high-level progress lines
   75     detail: false         # print timing/details
   76     save_raw: false       # save intermediate JSON files (*.pass1.json, *.merged.json, ...)
   77     force_chunk: false    # force chunking instead of full-text pass
   78 
   79   # Novelty agent configuration
   80   novelty:
   81     llm: default
   82     personas:
   83       enable: true
   84       steps: 4
   85       print: true
   86       debate:
   87         enable: true
   88         rounds: 2
   89         roles: [PhD, PhD, Professor, Professor, Postdoc, Postdoc]
   90         until_agree: true
   91         # max_rounds: 0  # 0 → auto-cap
   92     uniqueness:
   93       enable: true
   94 
   95   # Planner agent configuration
   96   planner:
   97     llm: default
   98     personas:
   99       enable: true
  100 
  101   # Iterate agent configuration
  102   iterate:
  103     llm: default
  104     personas:
  105       enable: false    # optional persona notes for iterate (off by default)
  106 
  107   # Code generation controls
  108   codegen:
  109     enable: false      # LLM-driven augmentation module generation
  110     llm: default
  111     editor:
  112       enable: false    # Optional REPLACE/EDIT training hooks generation
  113       llm: default
  114 
  115   # Idea blueprints agent
  116   idea_blueprints:
  117     llm: default
  118     top_k: 3
  119 
  120   # Optional interactive stage
  121   interactive:
  122     enable: false
  123 
  124   # Human-in-the-loop confirmation gates
  125   hitl:
  126     confirm: false
  127     auto_approve: true
