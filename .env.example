# Example Environment Configuration
# Copy this file to .env and fill in your actual API keys

# Required API Keys
ELSEVIER_KEY=your_elsevier_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional Elsevier institutional token
# X_ELS_INSTTOKEN=your_institutional_token_here

# Pipeline Configuration
WRITE_PAPER=1                    # Enable paper writing step
DATASET=isic                     # Dataset to use: isic or cifar10
ALLOW_FALLBACK_DATASET=true      # Use synthetic data if real dataset missing
ALLOW_DATASET_DOWNLOAD=true      # Allow CIFAR10 download

# Execution Control
TIME_BUDGET_SEC=0                # Time budget in seconds (0 = unlimited)
PARALLEL_RUNS=false              # Enable parallel experiment execution
MUTATE_K=0                       # Number of mutations per refinement
REPEAT_N=1                       # Number of experiment repetitions

# Human-in-the-Loop
HITL_CONFIRM=0                   # Require human confirmation at gates
HITL_AUTO_APPROVE=1              # Auto-approve confirmations

# LLM Caching
LLM_CACHE=true                   # Enable LLM response caching
LLM_CACHE_DIR=.cache/llm         # Cache directory

# Optional MLflow Integration
# MLFLOW_ENABLED=true
# MLFLOW_TRACKING_URI=http://localhost:5000